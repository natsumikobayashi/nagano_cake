<h4>ショッピングカート</h4>
<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
<table>
  <thead>
    <tr>
     <th>商品名</th>
     <th>単価(税込)</th>
     <th>数量</th>
     <th>小計</th>
     <th></th>
    </tr>
  </thead>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_item_image(90,120) %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price.to_s(:dalimited) %></td>
      <td><%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %><!--amountを更新するためのform_with-->
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更" %><% end %></td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する",cart_item_path(cart_item.id), method: :delete %></td>
          <% @total +=  cart_item.subtotal %>
      <% end %>
    </tr>
    <tr>
      <td><%= link_to "買い物を続ける", root_path %></td>
      <td></td>
      <td></td>
      <td>合計金額</td>
      <td><%= @total %></td></tr>
</table>
<%= link_to "情報入力に進む", new_order_path %>