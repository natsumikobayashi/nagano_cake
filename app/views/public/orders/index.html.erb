<div class="container">
<span style="background-color:#dcdcdc">注文履歴一覧</span>
<table class="table table-bordered">
  <thead style="background-color:#dcdcdc">
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= l order.created_at, format: :short %></td>
      <td><%= order.address_display %></td>
      <td><% order.order_details.each do |order_detail| %>
           <%= order_detail.item.name %><br>
           <% end %></td>
      <td><%= order.billing_amount %></td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "表示する", order_path(order.id),class: "btn btn-primary btn-sm" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>