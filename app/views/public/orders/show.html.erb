<div class="container">
<span style="background-color:#dcdcdc">注文履歴詳細</span>
 <table class="table table-bordered">
  <strong>注文情報</strong>
  <tbody>
    <tr>
    <td style="background-color:#dcdcdc">注文日</td>
    <td><%= l @order.created_at, format: :short %></td>
    </tr>
    <tr>
      <td style="background-color:#dcdcdc">配送先</td>
      <td><%= @order.address_display %></td>
    </tr>
    <tr>
      <td style="background-color:#dcdcdc">支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <td style="background-color:#dcdcdc">ステータス</td>
      <td><%= @order.status_i18n %></td>
    </tr>
  </tbody>
</table>

<table class="table table-bordered">
  <strong>請求情報</strong>
  <tbody>
    <tr>
      <td style="background-color:#dcdcdc">商品合計</td>
      <td><%= @order.item_subtotal %></td>
    </tr>
    <tr>
      <td style="background-color:#dcdcdc">配送料</td>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <td style="background-color:#dcdcdc">ご請求額</td>
      <td><%= @order.billing_amount %></td>
    </tr>
  </tbody>
</table>

<table class="table table-bordered">
 <strong>注文内容</strong>
  <thead style="background-color:#dcdcdc">
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.subtotal %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>