<h4>注文情報確認</h4>
<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tbody>
    <% @order_detail.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_item_image(40,55) %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price.to_s(:dalimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <% @total = @total + cart_item.subtotal %>
    </tr>
    <% end %>
  </tbody>
</table>
<table>
  <td>
    <tr>
      <td>送料</td>
      <td><%= @order.postage %></td>
    </tr>
   　 <td>商品合計</td>
     　 <td><%= @total %></td>
    <tr>
      <td>請求額</td>
      <td><%= @total + @order.postage %></td>
    </tr>
  </td>
</table>

<h8>支払方法</h8><%= @order.payment_method_i18n %><br>
<h8>お届け先</h8>〒<%= @order.postcode + @order.address %><br>
<%= @order.name %>
<%= form_with model: @order, url: orders_path, method: :post do |f| %>
<%= f.hidden_field :postcode %>
<%= f.hidden_field :address %>
<%= f.hidden_field :name %>
<%= f.hidden_field :postage %>
<%= f.hidden_field :billing_amount, :value => @total + @order.postage %>
<%= f.hidden_field :payment_method %>
<%= f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.hidden_field :status %>
<%= f.submit "注文を確定する"  %>
<% end %>
