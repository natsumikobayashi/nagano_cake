<h4>配送先登録/一覧</h4>
<table>
  <thead>
    <%= form_with model: @address do |f| %>
    <tr>
      <td>郵便番号ハイフンなし</td>
      <td><%= f.text_field :postal_code %></td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
      <td></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td> <%= f.text_field :name %></td>
      <td><%= f.submit "新規登録" %></td>
    </tr>
    <% end %>
  </thead>
</table>
<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) %><%= link_to "削除する", address_path(address.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>