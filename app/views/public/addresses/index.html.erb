<div class="container">
 <span style="background-color:#dcdcdc">配送先登録/一覧</span>
<%= form_with model: @address do |f| %>
<table>
  <thead>
    <tr>
      <td>郵便番号ハイフンなし</td>
      <td><%= f.text_field :postal_code %></td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
      <td></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td> <%= f.text_field :name %></td>
      <td><%= f.submit "新規登録", class: "btn btn-success btn-sm" %></td>
    </tr>
  </thead>
</table>
<% end %>
<table class="table table-bordered">
  <thead style="background-color:#dcdcdc">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-sm" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger btn-sm" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>