<div class="container">
 <div class="row">
  <div class="col-lg-3">ジャンル検索</div>
  <div class="col-lg-9">
   <p>商品一覧 (全<%= @item_count %>件)</p>
    <div class="d-flex flex-nowrap">
    <% @items.each do |item| %>
    <div>
     <%= link_to item_path(item.id) do %><%= image_tag item.get_item_image(200,150) %><% end %>
     <p><%= item.name %></p>
     <p>￥<%= item.add_tax_price.to_s(:dalimited) %></p>
    </div>
   <% end %>
   </div>
   </div>
   <%= paginate @items %>
 </div>
</div>