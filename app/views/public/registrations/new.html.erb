<h2>新規会員登録</h2>
<div class="container">
<%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tbody>
      <tr><td>名前</td>
      <td><%= f.label :"(姓)" %><%= f.text_field :last_name, autofocus: true %></td>
      <td><%= f.label :"(名)" %><%= f.text_field :first_name, autofocus: true %></td>
      </tr>
      <tr><td>フリガナ</td>
        <td><%= f.label :"(セイ)" %><%= f.text_field :last_name_kana, autofocus: true %></td>
        <td><%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, autofocus: true %></td>
      </tr>
      <tr><td>メールアドレス</td>
      <td><div class="field"><%= f.email_field :email, autofocus: true %></div></td>
      <td></td>
     <tr><td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
      <td></td>
      </tr>
       <tr><td>住所</td>
      <td><div class="field"><%= f.text_field :address, autofocus: true %></div></td>
      <td></td>
      <tr><td>電話番号</td>
      <td><div class="field"><%= f.text_field :telephone_number, autofocus: true %></div></td>
      <td></td>
      </tr>
      <tr><td>
      <div class="field">
       <%= f.label :"パスワード(6文字以上)" %></td>
       <td><%= f.password_field :password, autocomplete: "new-password" %>
       </td>
      </div>
      </tr>
      <tr><td>
  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <td>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </td>
  </div>
</td></tr>
<tr><td></td><td><div class="actions">
    <%= f.submit "新規登録" %>
  </div></td></tr>
  </tbody>
  </table>
<% end %>
<h2>既に登録済みの方</h2>
<%= link_to new_customer_session_path do %>こちら<% end %>  からログインして下さい
</div>