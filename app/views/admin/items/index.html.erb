<h4>商品一覧</h4>
<div class="container">
  <table>
    <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
    </tr>
    </thead>
  <% @items.each do |item| %>
  <tbody>
  <tr>
    <td><%= item.id %></td>
    <td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
  </tr>
  </tbody>
  <% end %>
  </table>
  <%= paginate @items %>
</div>
