<div class="container">
 <div class="row">
  <div class="col">
   <span style="background-color:#CCCCCC">ジャンル一覧・追加</span>
    <%= form_with model: @genre ,url: admin_genres_path do |f| %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: "btn btn-success btn-sm" %>
    <% end %>
    <table>
     <thead style="background-color:#dcdcdc">
      <th>ジャンル</th>
      <th></th>
     </thead>
     <tbody>
      <% @genres.each do |genre| %>
      <tr>
       <td><%= genre.name %></td>
       <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
      </tr>
       <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>