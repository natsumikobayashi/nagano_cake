<div class="container">
  <div class="row">
    <div class="col">
      <span style="background-color:#CCCCCC">会員一覧</span>
       <table class="table">
     　  <thead style="background-color:#dcdcdc">
         <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
         </tr>
        </thead>
         <% @customers.each do |customer| %>
        <tbody>
         <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
          <td><%= customer.email %></td>
          <td><% if customer.is_deleted == false %>
            <font color="#33ff33"><strong>有効</strong></font>
            <% else %>
            <font color="#dcdcdc"><strong>退会</strong></font>
            <% end %>
          </td>
         </tr>
        </tbody>
         <% end %>
       </table>
       <%= paginate @customers %>
    </div>
  </div>
</div>