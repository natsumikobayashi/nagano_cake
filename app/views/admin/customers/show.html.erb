<div class="container">
  <div class="row">
    <div class="col">
     <span style="background-color:#CCCCCC"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span>
     <table>
       <tr>
         <td>会員ID</td>
         <td><%= @customer.id %></td>
       </tr>
       <tr>
         <td>氏名</td>
         <td><%= @customer.last_name %><%= @customer.first_name %></td>
       </tr>
       <tr>
         <td>フリガナ</td>
         <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
       </tr>
       <tr>
         <td>郵便番号</td>
         <td><%= @customer.postcode %></td>
       </tr>
       <tr>
         <td>電話番号</td>
         <td><%= @customer.telephone_number %></td>
       </tr>
       <tr>
         <td>メールアドレス</td>
         <td><%= @customer.email %></td>
       </tr>
       <tr>
         <td>会員ステータス</td>
         <td><% if  @customer.is_deleted == false %>
              <font color="#33ff33"><strong>有効</strong></font>
             <% else %>
              <font color="#dcdcdc"><strong>退会</strong></font>
             <% end %></td>
       </tr>
     </table>
     <%= link_to '編集する',edit_admin_customer_path(@customer.id), class: "btn btn-success btn-sm" %>
     <%= link_to '注文履歴一覧を見る',admin_homes_top_path, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>