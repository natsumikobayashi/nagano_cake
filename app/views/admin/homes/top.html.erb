<h4>注文履歴一覧</h4>
<div class="container">
  <table>
    <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    </thead>
  <% @orders.each do |order| %>
  <tbody>
  <tr>
    <td><%= link_to admin_orders_show(order.id) do %><%= order.created_at %><% end %></td>
    <td><%= order.customer_id.last_name %><%= order.customer_id.first_name %></td>
    <td><%= order.order_id.quantity %></td>
    <td><%= order.status %></td>
  </tr>
  </tbody>
  <% end %>
  </table>
  <%= paginate @orders %>
</div>
